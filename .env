# Flask Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///portfolio.db

# Upload Configuration
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=your-ga-id

# Security
CSRF_ENABLED=True
WTF_CSRF_ENABLED=True

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin
ADMIN_EMAIL=admin@portfolio.com

# Site Configuration
SITE_NAME=Muhammad Hanzala Portfolio
SITE_DESCRIPTION=Full Stack Developer Portfolio
SITE_URL=http://localhost:5000

# Stripe Configuration
# Stripe API keys for testing. 
# You can get your own test keys from the Stripe dashboard: https://dashboard.stripe.com/test/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_... 
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
